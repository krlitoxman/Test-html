@media (max-width: 630px)
	/**********************
    	INDEX
    **********************/			
	body
		//font-size 14px
		
	.content
		.item
			width 100%
			&.order-1 
				order 1
				margin-top -1em
				padding 4em 0.5em 4.5em 0.5em
				height auto	
				.title
					margin-top 0 !important	
					text-align left
					padding-left 1em
				
			&.order-2 
				order 2
				
			&.order-3
				order 3
				
		&.about
			position relative
			.item
				&:nth-child(1)
					background none
					position absolute
					width 11em
					height auto
					right 1.5em
					top 5em
					figure
						width 100%
						
				&:nth-child(2)
					padding-top 3em
		
		&.creation
			position relative
			.item
				&:nth-child(2)
					background white
					position absolute
					width 11em
					height 11em
					right 1.5em
					top 5em
					border-radius 50%
					overflow hidden
					figure
						width 58%
						background white
						
		&.contact
			.item
				&:nth-child(3)
					background gris
					form
						width 90%
						input
							width 80%
						button
							border 1px solid azul
							color azul
							&:hover
								background azul
								color white


		
	/**********************
       HEADER
    **********************/
	.main
		width 95%
		
	header
		h1
			text-align center
			
		.mainContainer
			//margin-bottom 0.5em
			nav
				width 100%
				flex-center()
				li
					a
						font-size 1.3em
			&-item
				display none
								
